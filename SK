command /recording <text>:
	usage: /recording <channel url>
	aliases: /record
	permission: skript.op
	trigger:
		broadcast ""
		broadcast "&6&l+&7&l---------------------------------------&6&l+"
		broadcast ""
		broadcast "		 &a&l%player% &e&lis recording!"
		broadcast "		&c&lLook at his channel:"
		broadcast "  &d&l%arg 1%"
		broadcast ""
		broadcast "&6&l+&7&l---------------------------------------&6&l+"
		broadcast ""
command /streaming <text>:
	usage: /streaming <url>
	aliases: /stream
	permission: skript.op
	trigger:
		broadcast ""
		broadcast "&6&l+&7&l-------------------------------------------&6&l+"
		broadcast ""
		broadcast "	   &e&l%player% &a&lis now live!"
		broadcast "			&d&lLook it and Have Fun:"
		broadcast "  &c&l%arg 1%"
		broadcast ""
		broadcast "&6&l+&7&l-------------------------------------------&6&l+"
		broadcast ""
command /close:
	permission: skript.op
	trigger:
		broadcast ""
		broadcast "&c&lThe server needs to reboot in 5 seconds."
		wait 1 second
		broadcast "&c&lStopping in 4 seconds!"
		wait 1 second
		broadcast "&c&lStopping in 3 seconds!"
		wait 1 second
		broadcast "&c&lStopping in 2 seconds!"
		wait 1 second
		broadcast "&c&lStopping in 1 second!"
		wait 1 second
		broadcast "&c&lStopping server!"
		broadcast ""
		wait 1 second
		make console execute command "restart"
command /setspawn:
	permission: skript.op
	trigger:
		set {spawn} to location of player
		message "&aYou successfully placed the spawn"
command /spawn [<player>]:
	trigger:
		if {spawn} isn't set:
			message "&cSpawn is not set!"
			stop
		else:
			if argument 1 isn't set:
				teleport player to {spawn}
			else:
				if player has permission "skript.op":
					teleport arg 1 to {spawn}
command /delspawn:
	permission: skript.op
	trigger:
		delete {spawn}
		message "&cYou deleted the spawn!"
on chat:
	if {staffchat.%player%} is 1:
		cancel event
		loop all players:
			loop-player has the permission "skript.op":
				message "&8[&eSC&8] &a%player's display name% &6> &f %coloured message%" to loop-player
	else:
		if {chat.stop} is "true":
			player doesn't have permission "skript.op":
				cancel event
		  	  send "&9Chat> &cThe chat is currently muted!"
		else:
			if {chat.cooldown} is "true":
				cancel event
				set {_waited} to difference between {spam.%player%.lastused} and now
				if {_waited} is less than 5 seconds:
					message "&6Please wait &c%difference between 5 seconds and {_waited}%&6 to send another message."
					cancel event
					stop
				else:
					send "%player%&7: %message%" to all players
				set {spam.%player%.lastused} to now
			else:
				if message contains "hax" or "hack" or "cheat":
					if player doesn't have permission "skript.op":
						message "&9Anti-Hackusate &7> &cIf you believe someone is hacking, please notify a staff member."
						cancel event
				if message contains "shit" or "fuck" or "dick" or "nigger" or "nigga" or "penis" or "vagina" or "cunt" or "fuck" or "sex" or "motherfucker" or "fuq" or "fuc" or "fuk" or "fk" or "bitch" or "shit" or "bullshit" or "bullsht" or "ass" or "<dot>" or "dot" or "[.]" or "<.>" or "{.}" or "boobs" or "sh*t" or "porn" or "" or "9/11" or ".co" or ".us" or ".uk" or ".ws" or ".tk" or ".org" or ".to" or "dot" or "(dot)" or ".pw" or "dot" or ".it" or ".tech" or ".edu" or "DOT" or " , " or ".de" or ".tl" or ".nl" or ".be" or ".me" or ".info" or ".ly" or ".onion" or ".bit" or ".pl" or ".gl" or ".tv" or ".gs" or ".myserver" or ".club" or ".space" or ".design" or ".rent" or ".bid" or ".trade" or ".webcam" or ".press" or ".io" or ".ca" or ".college" or ".host" or ".es" or ".yoga" or ".financial" or ".flights" or ".guitars" or ".xyz" or "DDOS" or "hell" or "soul" or ".mc-server.net" or "mc-shock.com" or "mc-dns.com" or "mc-dns.net" or "mcpro.co" or "mcph.co" or "mcph.eu" or "mcpro.eu" or "hypixel" or "mineplex" or "Allahu Akbar" or "kys" or "kms" or "slut":
					if player doesn't have permission "skript.op":
						execute console command "/warn %player% Inappropriate Messages"
						execute console command "/tempmute %player% 10m Inappropriate Messages"
						cancel event
on any command:
	player doesn't have permission:
		cancel event
on join:
	wait 3 ticks
	teleport player to {spawn}
	if player has permission "skript.op":
		broadcast "&a&lDonator %player% has joined!"
		play "AMBIENCE_CAVE" to player at volume 100.0
	else:
		broadcast "%player% has joined!"
		play "NOTE_PLING" to player at volume 100.0
		wait 10 ticks
		open chest with 6 rows named "By playing you agree to the rules!" to player
		wait 2 ticks
		format slot 0 of player with emerald block named "&c&lRemember to read the Rules!" with lore "Pixelors.net" to close then run [make player execute command "website"]
	if {staffchat.%player%} is 1:
		set {staffchat.%player%} to 0
	wait 10 ticks
	send action bar from "Welcome to the Pixelors Network" to players
	if {bossbarenabled} is "true":
		loop 300 times:
			wait 1 second
			display "Message 1" on bossbar with 100 percent by 7 seconds for player
			wait 5 seconds
			display "Message 2" on bossbar with 75 percent by 7 seconds for player
			wait 5 seconds
			display "Message 3" on bossbar with 50 percent by 7 seconds for player
			wait 5 seconds
			display "Message 4" on bossbar with 25 percent by 7 seconds for player
			wait 5 seconds
			display "Message 5" on bossbar with 1 percent by 7 seconds for player
