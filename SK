command /menu:
	description: Player Menu
	trigger:
		wait 2 ticks
		open chest with 6 rows named "&cPunishment > &f%arg 1%" to player
		wait 2 ticks
		format slot 0 of player with map named "&f&lPlayer Menu" to close then run [make player execute command "burnmenu %arg 1%"]
		format slot 9 of player with sand named "&f&lStaff Menu" to close then run [make player execute command "burnmenu %arg 1%"]
		format slot 18 of player with dirt named "&f&lAdmin Menu" to close then run [make player execute command "burnmenu %arg 1%"]
		format slot 27 of player with stone named "&f&lDev Menu" to close then run [make player execute command "burnmenu %arg 1%"]
		format slot 36 of player with obsidian named "&f&lBuilder Menu" to close then run [make player execute command "burnmenu %arg 1%"]
		format slot 45 of player with coal named "&f&lManager Menu" to close then run [make player execute command "burnmenu %arg 1%"]
		format slot 54 of player with chest named "" to be unstealable
		format slot 1 of player with glass named "" to be unstealable
		format slot 10 of player with glass named "" to be unstealable
		format slot 19 of player with glass named "" to be unstealable
		format slot 28 of player with glass named "" to be unstealable
		format slot 37 of player with glass named "" to be unstealable
		format slot 46 of player with glass named "" to be unstealable
		format slot 55 of player with glass named "" to be unstealable
		format slot 5 of player with armor stand named "&f&lToggle Spectator" with lore "Spectate or un-spectate." to be unstealable
		format slot 6 of player with emerald block named "&a&lONLINE" to be unstealable
		format slot 21 of player with leather boots named "&e&lKick" with lore "Kick the player from the server?" to close then run [kick arg 1 due to "&cKicked from the Server."]
		format slot 23 of player with book and quill named "&f&lTempMute" with lore "Temporarily Mute the player?" to close then run [make player execute command "tempmute %arg 1% 15m"]
		format slot 25 of player with iron sword named "&f&lKill" with lore "Kill the player?" to close then run [make player execute command "kill %arg 1%"]
		format slot 30 of player with rose red named "&f&lBan" with lore "Ban the player from the server?" to close then run [make player execute command "banmenu %arg 1%"]
		format slot 32 of player with barrier named "&f&lClear inventory" with lore "Clear the player's inventory?" to close then run [make player execute command "clear %arg 1%"]
		format slot 34 of player with paper named "&f&lMute" with lore "&7Chat Related: Profanity, Spam, Harrassment, Trolling, etc" to close then run [make player execute command "mute %arg 1%"]
		format slot 39 of player with flint and steel named "&f&lBurn" with lore "???" to close then run [make player execute command "burnmenu %arg 1%"]
		format slot 41 of player with blaze rod named "&f&lLightning" with lore "???" to close then run [make player execute command "lightning %arg 1%"]
		format slot 43 of player with flint and steel named "&f&lBurn" with lore "???" to close then run [make player execute command "burnmenu %arg 1%"]
